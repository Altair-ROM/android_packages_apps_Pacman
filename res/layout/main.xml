<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="vertical"
    android:layout_weight="1" xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:layout_weight="1">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:orientation="vertical"
            android:id="@+id/gapp_container"
            >
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:background="@android:drawable/bottom_bar" style="@android:style/ButtonBar">
        <Button android:id="@+id/main_btn_ok"
            android:layout_width="0dip" android:layout_height="wrap_content"
            android:text="@string/main_btn_ok" android:layout_weight="1" />
        <Button android:id="@+id/main_btn_selectall"
            android:layout_width="0dip" android:layout_height="wrap_content"
            android:text="@string/main_btn_selectall"
            android:layout_weight="1" />
        <Button android:id="@+id/main_btn_cancel"
            android:layout_width="0dip" android:layout_height="wrap_content"
            android:text="@string/main_btn_cancel"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
