<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:layout_width="fill_parent"
        android:id="@+id/bottombar"
        android:layout_weight="1" android:layout_marginTop="-20dip"
        android:gravity="bottom" android:layout_height="wrap_content"
        android:orientation="horizontal" android:background="@android:drawable/bottom_bar"
        android:layout_alignParentBottom="true"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <Button android:id="@+id/main_btn_ok"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/main_btn_ok" android:layout_weight="1" />
        <Button android:id="@+id/main_btn_selectall"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/main_btn_selectall"
            android:layout_toRightOf="@id/main_btn_ok"
            android:layout_weight="1" />
        <Button android:id="@+id/main_btn_cancel"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/main_btn_cancel"
            android:layout_toRightOf="@id/main_btn_selectall"
            android:layout_weight="1" />
    </RelativeLayout>

    <ListView android:layout_width="fill_parent"
        android:id="@+id/listview"
        android:layout_height="fill_parent" android:layout_marginBottom="20dip"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottombar"
        >
    </ListView>
</RelativeLayout>
